<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Define remotes -->
  <remote name="zeelog"
    fetch="https://github.com/zeelog" />
  <remote name="Hassan"
    fetch="https://github.com/Hassan-kareem" />
  
  <!-- Device Tree -->
  <project path="device/xiaomi/mido" name="android_device_xiaomi_mido" remote="zeelog" revision="lineage-20.0" />
  
  <!-- Kernel Tree -->
  <project path="kernel/xiaomi/mido" name="android_kernel_xiaomi_mido" remote="zeelog" revision="lineage-20.0" />
  
  <!-- Vendor Tree -->
  <project path="vendor/xiaomi" name="proprietary_vendor_xiaomi" remote="zeelog" revision="lineage-20.0" />
  
  <!-- Remove existing projects -->
  <remove-project path="frameworks/base" />
  <remove-project path="packages/apps/Trebuchet" />
  <remove-project path="packages/apps/Settings" />
  <remove-project path="build/make" />
  
  <!-- Add my custom projects -->
  <project path="frameworks/base" name="android_frameworks_base" remote="Hassan" revision="lineage-20.0" />
  <project path="packages/apps/Trebuchet" name="android_packages_apps_Trebuchet" remote="Hassan" revision="lineage-20.0" />
  <project path="packages/apps/Settings" name="android_packages_apps_Settings" remote="Hassan" revision="lineage-20.0" />
  
  <!-- Custom build project with copyfile and linkfile elements -->
  <project path="build/make" name="android_build" remote="Hassan" revision="lineage-20.0">
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/make/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/make/buildspec.mk.default" />
    <linkfile src="core" dest="build/make/core" />
    <linkfile src="envsetup.sh" dest="build/make/envsetup.sh" />
    <linkfile src="target" dest="build/make/target" />
    <linkfile src="tools" dest="build/make/tools" />
  </project>
</manifest>
