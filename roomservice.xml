<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Define remotes -->
  <remote name="zeelog" fetch="https://github.com/zeelog" />
  <remote name="Hassan" fetch="https://github.com/Hassan-kareem" />
  
  <!-- Device Tree -->
  <project path="device/xiaomi/mido" name="android_device_xiaomi_mido" remote="Hassan" revision="lineage-20.0" />
  
  <!-- Kernel Tree -->
  <project path="kernel/xiaomi/mido" name="android_kernel_xiaomi_mido" remote="zeelog" revision="lineage-20.0" />
  
  <!-- Vendor Tree -->
  <project path="vendor/xiaomi" name="proprietary_vendor_xiaomi" remote="zeelog" revision="lineage-20.0" />
  
  <!-- Remove Original Projects -->
  <remove-project name="LineageOS/android_frameworks_base" />
  <remove-project name="LineageOS/android_packages_apps_Settings" />
  <remove-project name="LineageOS/android_build" />
  
  <!-- Add custom projects -->
  <project path="frameworks/base" name="android_frameworks_base" remote="Hassan" revision="lineage-20.0" />
  <project path="packages/apps/Settings" name="android_packages_apps_Settings" remote="Hassan" revision="lineage-20.0" />
  
  <!-- Custom build project without symlinks -->
  <project path="build/make" name="android_build" remote="Hassan" revision="lineage-20.0">
    <copyfile src="core/root.mk" dest="Makefile" />
    <copyfile src="CleanSpec.mk" dest="build/make/CleanSpec.mk" />
    <copyfile src="buildspec.mk.default" dest="build/make/buildspec.mk.default" />
    <copyfile src="core/Android.bp" dest="build/make/core/Android.bp" />
    <copyfile src="envsetup.sh" dest="build/make/envsetup.sh" />
    <copyfile src="target/Android.mk" dest="build/make/target/Android.mk" />
    <copyfile src="tools/Makefile" dest="build/make/tools/Makefile" />
  </project>
</manifest>
